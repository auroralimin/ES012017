<!DOCTYPE html>
<html lang="en" ng-app="tables">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Mesas</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
      <body ng-controller="Table" ng-init="GetAllTables()">

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Minha Mesa</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav">
                    <li class="active"><a href="/temp/tables">Mesas</a></li>
                    <li><a href="/temp/notifications">Notificações</a></li>
                </ul>

                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <label for="new-table" style="margin-right:10px;">Nova mesa: </label>
                        <input id="new-table" type="text" ng-model="name" class="form-control" placeholder="número da mesa">
                    </div>
                    <button type="submit" class="btn btn-default">Cadastrar</button>
                </form>

            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>



    <div class="container">
        <table class="table">
            <caption>Mesas cadastradas</caption>
            <thead>
                <tr>
                    <th>Nome da mesa</th>
                    <th>TOKEN</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="table in tables">
                    <th scope="row">{{ table.name }}</th>
                    <td>{{ table.token }}</td>
                </tr>
            </tbody>
        </table>
    </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script>
    var app = angular.module("tables", []);
    app.controller("Table", function($scope, $http) {
        $scope.GetAllTables = function () {
            $http.get('/api/table')
            .then(function (response) {
                $scope.tables = response.data;
                console.log(response.data)
            })
        }
    });
    </script>
  </body>
</html>
